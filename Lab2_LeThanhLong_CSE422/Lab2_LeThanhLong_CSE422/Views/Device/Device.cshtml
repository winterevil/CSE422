@model IEnumerable<Device>

<h2>Devices</h2>
<a asp-action="AddEdit" class="btn btn-primary">Add New Device</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Category</th>
            <th>Status</th>
            <th>User</th>
            <th>Date of Entry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.DeviceId</td>
                <td>@device.DeviceName</td>
                <td>@device.DeviceCode</td>
                <td>@InMemoryDatabase.DeviceCategories.FirstOrDefault(c => c.CategoryId == device.CategoryId)?.CategoryName</td>
                <td>@device.DeviceStatus</td>
                <td>@InMemoryDatabase.Users.FirstOrDefault(u => u.UserId == device.UserId)?.UserName</td>
                <td>@device.DeviceDateOfEntry.ToShortDateString()</td>
                <td>
                    <a asp-action="AddEdit" asp-route-id="@device.DeviceId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@device.DeviceId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
